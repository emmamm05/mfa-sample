<h1>Login</h1>

<%= form_with url: login_path, scope: :session, local: true do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, required: true, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, required: true %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p>
